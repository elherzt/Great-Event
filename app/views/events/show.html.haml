%h1
  =event.name
  %h4
    by
    =link_to event.user_name, user_path(event.user)
%h3
  =event.description
=image_tag("#{event.image}", class: 'event_poster')
%h3
  %span.event-info.date-event
    Date:
    ="From #{event.start_date_format} to #{event.end_date_format}"

%h3
  %span.event-info
    Place:
    =event.place
  %span.event-info
    Cost:
    =event.cost
  %span.event-info
    Time:
    =event.hour

%h3
  Requirements:
  =event.requirements
%h3
  Notes:
  =event.notes
%h3 
=render "menu"
#chronicle_events
  =render "chronicle"
#photos_events
  =render "photos"
#data_events
  =render "data"

