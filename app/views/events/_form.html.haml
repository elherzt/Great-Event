= simple_form_for ([user, event]) do |f|
  =f.input :name, input_html:  {class: 'input_form'} 
  =f.input :description, as: :text, input_html:  {class: 'input_form text_area'}
  =f.input :poster, as: :file, input_html:  {class: 'input_form text_area'}
  =f.input :start_date, as: :string, input_html:  {class: 'select_date start_date', readonly: true} 
  =f.input :end_date, as: :string, input_html:  {class: 'select_date end_date', readonly: true, visible: false}
  %span#date_error
  =f.input :place, input_html:  {class: 'input_form'}
  %a.event_free{href: '#'} Free
  =f.input :cost, input_html:  {class: 'input_form cost_event'}, label_html: { class: 'cost_event'}
  =f.input :hour, input_html:  {class: 'input_form'}
  =f.input :requirements, as: :text, input_html:  {class: 'input_form text_area'}
  =f.input :notes, as: :text, input_html:  {class: 'input_form text_area'}
  =f.input :user_id, as: :hidden, value: current_user.id, input_html:  {class: 'input_form'}
  =f.button :submit, class: 'create_event'
=link_to "Back", :back

